// 引入字体
@font-face{
    font-family: 'Consolas';
    src:url('/Consolas.ttf') format('truetype');
}
// @font-face{  // 微软雅黑的字体太大，因此不提供
//     font-family: 'Microsoft YaHei';
//     src:url('/Microsoft YaHei.ttf') format('truetype');
// }
@font-face{
    font-family: 'mv boli';
    src:url('/MV-Boli.ttf') format('truetype');
}

html {
    background-color: #ebe6dd;    // 当body部分（即正文）过短时，就能看到这个背景色
}

body {
    background-color: #3d3961;    // 这个紫色的背景色，只是用于填充首页，正文部分会单独设置米色的背景色
    color: #2c3e50;
    font-family: 'Consolas', 'Microsoft YaHei', serif;
    font-size: 16px;
}

body .site-name {
    font-family: 'mv boli';
}

body .navbar {                      // 导航栏
    background-color: #e0dbd2;
}

body .navbar div.links {
    background-color: #e0dbd2;
}

body .navbar div.links .nav-dropdown {
    background-color: #e0dbd2;
}

body .sidebar {                     // 侧边栏
    background-color: #e0dbd2;
}

body .sidebar-heading {             // 侧边栏的分组标题（不带链接时）
    font-weight: normal;
}

body .page {                        // 正文部分
    background-color: #ebe6dd;
}

body td, th {                       // 表格
    border: 1px solid #a3a3a3;
}

body .theme-default-content code {  // MarkDown的行内代码块
    background-color: #dcd5ca;
    color: #2c3e50;
    font-family: 'Consolas', 'Microsoft YaHei', serif;
}

body div[class*="language-"] {      // MarkDown的代码块
    background-color: #3d3d3d;
}

body div[class*="language-"] pre[class*="language-"] code {  // MarkDown的代码块
    color: #d9d9d9;
    font-family: 'Consolas', 'Microsoft YaHei', serif;
}

.theme-container.homepage_class div {   // 自定义首页
    background-image: url(/cat.gif);
    background-repeat: no-repeat;
    background-position: 50% 50%;
}

.theme-container.homepage_class #homepage_title {   // 自定义首页
    color: #f8f8f8;
    text-align: center;
    font-family: 'mv boli';
    font-size: 4em;
    font-weight: normal;
}

.right-anchor {     // 右侧目录栏
    opacity: 0.8;
}
